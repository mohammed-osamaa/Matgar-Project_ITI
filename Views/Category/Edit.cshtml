@model Category

<h1>Edit Category</h1>

<form asp-action="Edit">
    <div class="form-group">
        <input asp-for="CategoryId" class="form-control" value="@Model.CategoryId" hidden />
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-check">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3" value="@Model.Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" value="Edit Category" class="btn btn-primary" my-5>Submit</button>
    <a href="~/Category/Index" class="btn btn-secondary">Cancel</a>

</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}